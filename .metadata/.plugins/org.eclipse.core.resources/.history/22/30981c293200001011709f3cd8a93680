package loja.app;

import loja.entidades.Produto;
import loja.repositorios.ProdutoRepositoryImpl;
import loja.servicos.ProdutoServiceImpl;
import loja.interfaces.ProdutoService;

public class Main {
    public static void main(String[] args) {
        // Criando o repositório e o serviço
        ProdutoRepositoryImpl repository = new ProdutoRepositoryImpl();
        ProdutoService service = new ProdutoServiceImpl(repository);

        // Testando cadastro de produto
        service.cadastrarProduto(1, "Notebook", 2500.00);
        System.out.println("Produto cadastrado com sucesso!");

        // Buscando o produto cadastrado
        Produto produto = service.obterProduto(1);
        if (produto != null) {
            System.out.println("Produto encontrado: " + produto.getNome() + " - R$" + produto.getPreco());
        } else {
            System.out.println("Produto não encontrado.");
        }
    }
}